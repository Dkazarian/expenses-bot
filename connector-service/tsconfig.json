{
  "compilerOptions": {
    "module": "ESNext",             
    "target": "ES2020",                      
    "moduleResolution": "node",              
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "skipLibCheck": true,                   
    "outDir": "dist",                      
    "sourceMap": true                      
  },
  "lib": ["es2020"],
  "include": ["src"]
}

